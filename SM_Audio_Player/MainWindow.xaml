<Window x:Class="SM_Audio_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SM_Audio_Player" Background="#333333"
        xmlns:UC="clr-namespace:SM_Audio_Player.View.UserControls"
        mc:Ignorable="d" WindowStyle="None"
        Title="Nazwa Projektu" Height="800" Width="1000">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <UC:Menu/>
        <UC:Player Grid.Row="1"/>
        <UC:Library Grid.Row="2"/>
        
    </Grid>
    
</Window>
