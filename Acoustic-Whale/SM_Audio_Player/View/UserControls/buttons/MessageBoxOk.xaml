<UserControl x:Class="SM_Audio_Player.View.UserControls.buttons.MessageBoxOk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SM_Audio_Player.View.UserControls.buttons"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300">

    <Border CornerRadius="25" Background="#333333" BorderBrush="#45a7bc" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="WarningOK" Text="{Binding Message}" TextAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="#45a7bc" TextWrapping="Wrap" Margin="10"/>
            <Button Grid.Row="1" Style="{DynamicResource ButtonStyle1}" x:Name="OK" Click="OK_OnClick" Margin="50, 10, 50, 10" Content="Ok" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    FontSize="20" Background="Transparent" Foreground="#45a7bc" BorderThickness="0"/>
        </Grid>
    </Border>
    
</UserControl>
